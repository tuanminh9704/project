include ../mixins/sub-menu-category.pug

header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          //- div() #{newlayoutsProductCategory}
          a(href="/")
            img(src=settingsGeneral.logo, alt="Logo")

      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-p rimary"
            )
              i.fas.fa-search

      .col-4
        .inner-menu
          ul
            li
              a(href="/") 
                | Trang chủ
                |
                i.fas.fa-home
            li(class="sub-menu")  
              -const pathProducts = "/products"
              a(href=pathProducts)
                | Sản phẩm
                | 
                i.fas.fa-shopping-bag
              +sub-menu(newlayoutsProductCategory, pathProducts)
            li
              a(href="/cart")
                | Giỏ hàng
                |
                i.fas.fa-shopping-cart
                | (#{cart ? cart.products.length : 0})
            if(user)
              li  
                a(href="/user/logout") Đăng xuất 
              li 
                a(href="user/info") #{user.fullName}
            else
              li 
                a(href="/user/login") Đăng nhập 
              li
                a(href="/user/register") Đăng ký
