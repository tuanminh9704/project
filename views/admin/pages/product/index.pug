extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/show-alert.pug


block main
  +show-alert-success(5000)
  h1(class="mb-4") #{pageTitle}
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6
          +search(keyword)
  .card.mb-3
    .card-header Danh sách
    .card-body
      table.table.table-hover.table-sm
      .row
        .col-8
          +form-change-multi(`/${prefixAdmin}/products/change-multi?_method=PATCH`)
        .col-4.text-right
          a(
            href=`/${prefixAdmin}/products/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table.table.table-hover.table-sm(checkbox-multi)
        thead
          tr
            td
              input(
                type="checkbox"
                name="checkall"
              )
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
          each item, index in products
            tr 
              td
                input(
                  type="checkbox"
                  name="id"
                  value=item.id
                )
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                input(
                  type="number"
                  name="position"
                  value=item.position
                  style="width: 60px"
                  min="1"
                )
              td
                if(item.status == "active")
                  a(
                    href="javascript:;"
                    class="badge badge-success"
                    data-id=item.id
                    data-status=item.status
                    button-change-status
                  ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    class="badge badge-danger"
                    data-id=item.id
                    data-status=item.status
                    button-change-status
                  ) Dừng hoạt động
              td
                a(class="btn btn-warning btn-sm", href=`/${prefixAdmin}/products/edit/${item.id}`) Sửa
                button(class="btn btn-danger btn-sm ml-1" data-id=item.id button-delete) Xóa
                a(class="btn btn-secondary btn-sm", href=`/${prefixAdmin}/products/detail/${item.id}`) Chi tiết

  +pagination(objectPagination)


  form(
    form-change-status
    action=""
    method="POST"
    data-path=`/${prefixAdmin}/products/change-status`
  )

  form(
    form-delete 
    action=""
    method="POST"
    data-path=`/${prefixAdmin}/products/delete`
  )